{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2020"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
    "noEmit": false,

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"]
}
